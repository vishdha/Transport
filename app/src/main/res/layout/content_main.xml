<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vishdha.android.vishaltransport.app.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:id="@+id/linearLayout">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:layout_width="168dp"
                android:layout_height="202dp"
                android:id="@+id/Daily_challan"
                android:nestedScrollingEnabled="false"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@drawable/pi_2014_icon_3_rounded"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Petrol_info"
                android:scaleType="fitCenter"
                android:nestedScrollingEnabled="false"
                android:background="#00000000"
                android:layout_marginLeft="20dp"
                android:src="@drawable/petrol_info" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Daily challan"
                android:id="@+id/Daily_challan_text"
                android:layout_gravity="center_horizontal"
                android:contextClickable="false"
                android:layout_weight="1.04"
                android:gravity="center|center_vertical" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="Petrol  Information"
                android:layout_gravity="bottom|right"
                android:id="@+id/Petrol_info_text"
                android:gravity="center|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageButton
                android:layout_width="167dp"
                android:layout_height="186dp"
                android:id="@+id/Payment_info"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@drawable/wallet_icon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/About_u"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/contact_us"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Payment Info"
                android:id="@+id/Payment_info_text"
                android:layout_weight="1.13"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_vertical" />

            <TextView
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:text="About us"
                android:id="@+id/About_us"
                android:layout_gravity="bottom|right"
                android:gravity="center|center_vertical"
                android:layout_weight="0.25" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
